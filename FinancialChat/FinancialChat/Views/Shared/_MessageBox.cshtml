@model FinancialChat.Models.MessageBoxViewModel

<div class="message-box">
    @using (Html.BeginForm("Submit", "MessageBox", FormMethod.Post, new { htmlAttributes = new { @class = "message-form" } }))
    {
        @Html.AntiForgeryToken()
        <div class="form-row">
            <div class="col-sm-10">
                @Html.EditorFor(model => model.Message, new { htmlAttributes = new { @class = "form-control" } })
            </div>
            <div class="col-sm-2">
                <input type="submit" class="btn btn-secondary btn-block" />
            </div>
        </div>
    }
</div>